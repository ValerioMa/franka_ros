<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="panda_arm">

  <xacro:include filename="$(find franka_description)/robots/panda_arm/panda_arm_macro.xacro"/>

  <xacro:arg name="hardware_interface" default="PositionJointInterface"/>
  <xacro:arg name="robot_name" default="panda"/>

  <xacro:panda_arm robot_name="$(arg robot_name)" hardware_interface="$(arg hardware_interface)"/>
</robot>
